<ul>
  <% reasons.each do |reason| %>
    <% if reason.id.present? %>
      <li>
        <div class="reason-content" id ="this_reason_<%= reason.id %>"></div>
        <p><%= reason.content %></p>
        <p><%= link_to "コメント編集", edit_estimate_reason_path(estimate, reason), remote: true %></p>
        <p><%= link_to "コメント削除", estimate_reason_path(reason.estimate_id, reason.id), method: :delete, remote: true,
                                     data: { confirm: "本当に削除しますか?"}, class: "text-danger" %></p>
      </li>
    <% end %>
  <% end %>
</ul>
